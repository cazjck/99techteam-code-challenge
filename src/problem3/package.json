  "description": "Three ways to sum to n",
  "author": "khanh.pham@khanhpham.org",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "ts-node src/main.ts"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/node": "18.15.11",
    "ts-node": "^10.0.0",
    "typescript": "^4.7.4"
